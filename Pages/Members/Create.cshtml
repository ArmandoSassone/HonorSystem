@page
@model HonorSystem.Pages.Members.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom: 10px;">
                <label asp-for="Member.Name" class="control-label">Nome Giocatore</label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <label asp-for="Member.CharacterName" class="control-label">Nome 1° PG</label>
                <input asp-for="Member.CharacterName" class="form-control" />
                <span asp-validation-for="Member.CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <label asp-for="Member.SecondaryCharacterName" class="control-label">Nome 2° PG</label>
                <input asp-for="Member.SecondaryCharacterName" class="form-control" />
                <span asp-validation-for="Member.SecondaryCharacterName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-danger"><i class="bi bi-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
