@page
@model HonorSystem.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].CharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].SecondaryCharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].IsStillInGuild)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Member) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryCharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStillInGuild)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdMembers">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdMembers">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdMembers">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
