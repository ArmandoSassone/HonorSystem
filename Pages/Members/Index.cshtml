@page
@model HonorSystem.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Members";
}

<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Bottone che ha aperto il modale
        var memberId = button.getAttribute('data-id');
        var memberName = button.getAttribute('data-name');

        // Aggiorna il modale con i dati corretti
        document.getElementById("deleteMemberId").value = memberId;
        document.getElementById("memberName").textContent = memberName;
    });
</script>

<script>
    window.onload = function () {
        $('#memberTable').DataTable({
            "paging": true,  // Attiva la paginazione
            "searching": true,  // Abilita la ricerca
            "ordering": true,  // Abilita l'ordinamento
            "pageLength": 25,  // Imposta il numero di righe per pagina (puoi cambiare questo valore)
            "lengthMenu": [5, 10, 25, 50, 100],  // Opzioni per le righe per pagina (es. 5, 10, 25, 50, 100)
            "pagingType": "full_numbers",  // Tipo di paginazione (numeri completi)
            "language": {
                "lengthMenu": "",
                "info": "",
                "search": "Cerca:"
            }
        });
    };
</script>

<h1>Membri</h1>

<div class="form-group">
    <a asp-page="Create" class="btn btn-primary">Crea Membro</a>
</div>

<div class="table-responsive">
    <table id="memberTable" class="display table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nome Giocatore
                </th>
                <th>
                    Nome PG 1° Gilda
                </th>
                <th>
                    Nome PG 2° Gilda
                </th>
                <th>
                    Data Ingresso Gilda
                </th>
                <th>
                    È attivo
                </th>
                <th>
                    È in gilda
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Member)
            {
                <tr>
                    <td style="text-align: center;">
                        @item.IdMembers
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CharacterName
                    </td>
                    <td>
                        @item.SecondaryCharacterName
                    </td>
                    <td>
                        @item.JoinDate?.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @if (item.IsActive == 1)
                        {
                            <i class="bi bi-check-circle-fill" style="color: green;"></i> <!-- Vero -->
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill" style="color: red;"></i> <!-- Falso -->
                        }
                    </td>
                    <td>
                        @if (item.IsStillInGuild == 1)
                        {
                            <i class="bi bi-check-circle-fill" style="color: green;"></i> <!-- Vero -->
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill" style="color: red;"></i> <!-- Falso -->
                        }
                    </td>
                    <td style="width: auto;">
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.IdMembers" data-bs-toggle="tooltip"
                            title="Modifica"><i class="bi bi-pencil-square"></i></a>

                        <a asp-page="./Details" class="btn btn-secondary" asp-route-id="@item.IdMembers"
                            data-bs-toggle="tooltip" title="Dettagli"><i class="bi bi-eye"></i></a>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-id="@item.IdMembers" data-name="@item.Name">
                            <i class="bi bi-trash-fill"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light"> <!-- Dark mode -->
            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="deleteModalLabel">Conferma Eliminazione</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Sei sicuro di voler eliminare il membro <strong id="memberName"></strong>?</p>
            </div>
            <div class="modal-footer border-secondary">
                <form method="post" action="/Members/Delete">
                    <input type="hidden" id="deleteMemberId" name="id" />
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Annulla</button>
                    <input type="submit" value="Elimina" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
