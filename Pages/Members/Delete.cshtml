@page
@model HonorSystem.Pages.Members.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Elimina</h1>

<h3>Sei sicuro di voler eliminare @Html.DisplayFor(model => model.Member.Name)?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.CharacterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.CharacterName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.SecondaryCharacterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.SecondaryCharacterName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.JoinDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.JoinDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.IsActive)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Member.IsActive == 1) { 
                <span><i class="bi bi-check-circle-fill" style="color: green;"></i></span>
            } else { 
                <span><i class="bi bi-x-circle-fill" style="color: red;"></i></span> 
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.IsStillInGuild)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Member.IsStillInGuild == 1) { 
                <span><i class="bi bi-check-circle-fill" style="color: green;"></i></span>
            } else { 
                <span><i class="bi bi-x-circle-fill" style="color: red;"></i></span> 
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Member.IdMembers" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i></a>
    </form>
</div>
