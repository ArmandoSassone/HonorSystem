<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HonorSystem</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HonorSystem.styles.css" asp-append-version="true" />
    
    <!-- Load CSS for DataTables -->
    <link rel="stylesheet" href="~/css/dataTables.min.css" />
   
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/dataTables.min.js"></script>


</head>
<body style="display:flex;">
    <!--Main Navigation-->
    <header style="margin-top:10vh;">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white" >
            <div class="position-sticky">
                <div class="list-group list-group-flush mx-3 mt-4">
                    <a href="/Members" class="list-group-item list-group-item-action py-2 ripple" aria-current="true">
                        <i class="fas fa-users fa-fw me-3"></i><span>Members</span>
                    </a>
                    <a href="/Items" class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-money-bill fa-fw me-3"></i><span>Items</span>
                    </a>
                    <a href="/ItemRequests" class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-hand fa-fw me-3"></i><span>Item Requests</span>
                    </a>
                    <a href="/HonorEntry" class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-calculator fa-fw me-3"></i><span>Honor Entries</span>
                    </a>
                    <a href="/HonorEntryTypes" class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-calculator fa-fw me-3"></i><span>Honor Entry Types</span>
                    </a>
                    <a href="/LeftItemInGuildStorage" class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-calculator fa-fw me-3"></i><span>Dropped Items</span>
                    </a>
                </div>
            </div>
        </nav>
        <!-- Sidebar -->
    </header>
    <!--Main Navigation-->
    <!--Main layout-->
    <main style="margin-top: 58px;">
        <div class="container pt-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - HonorSystem - <a href="/swagger">Swagger</a>
            </div>
        </footer>
    </main>

    

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>