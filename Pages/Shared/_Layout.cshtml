                <a href="/Items" style="margin-bottom: 10px; text-align: center;"
                    class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-money-bill fa-fw me-3"></i><span>Item</span>
                </a>
                <a href="/Bosses" style="margin-bottom: 10px; text-align: center;"
                    class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-money-bill fa-fw me-3"></i><span>Boss</span>
                </a>
                <a href="/ItemRequests" style="margin-bottom: 10px; text-align: center;"
                    class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-hand fa-fw me-3"></i><span>Richieste Item</span>
                </a>
                <a href="/HonorEntry" style="margin-bottom: 10px; text-align: center;"
                    class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-calculator fa-fw me-3"></i><span>Honor Entries</span>
                </a>
                <a href="/HonorEntryTypes" style="margin-bottom: 10px; text-align: center;"
                    class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-calculator fa-fw me-3"></i><span>Honor Entry Types</span>
                </a>
                <a href="/LeftItemInGuildStorage" style="margin-bottom: 10px; text-align: center;"
                    class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-calculator fa-fw me-3"></i><span>Item Droppati</span>
                </a>
                <a href="/DroppedItemsRequests" style="margin-bottom: 10px; text-align: center;"
                   class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-calculator fa-fw me-3"></i><span>Richieste Oggetti Droppati</span>
                </a>
                <a href="/Classifica" style="margin-bottom: 10px; text-align: center;"
                   class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-calculator fa-fw me-3"></i><span>Classifica</span>
                </a>


                <div class="d-flex justify-content-center">
                    <button id="darkModeToggle" style="margin-top: 5px;" class="btn btn-dark">🌙
                    </button>
                </div>


            </div>
        </div>
    </nav>
    <!--Main Navigation-->

    <!--Main layout-->
    <main style="margin-top: 58px;">
        <div class="container pt-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div style="margin-left: 10px">
            <p class="footer-text m-0">&copy; 2025 - Developed by Chantra, Microfono & Loretta - <a href="/swagger">Swagger</a></p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>