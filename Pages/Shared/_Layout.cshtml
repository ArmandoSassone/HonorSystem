<!DOCTYPE html>
<html lang="en">

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - HonorSystem</title>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/HonorSystem.styles.css" asp-append-version="true" />

<!-- Load CSS for DataTables -->
<link rel="stylesheet" href="~/css/dataTables.min.css" />

<!-- Icone bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<!-- Tooltips -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    });
</script>

<!-- Gestione light/dark mode -->
<script>
    if (localStorage.getItem("darkMode") === "enabled") {
        document.documentElement.classList.add("dark-mode");
    }
</script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const toggleButton = document.getElementById("darkModeToggle");
        const body = document.documentElement;
        const sidebar = document.getElementById("sidebarMenu");

        // Controlla se l'utente ha già una preferenza salvata
        if (localStorage.getItem("darkMode") === "enabled") {
            body.classList.add("dark-mode");
            sidebar.classList.remove("bg-white");
            sidebar.classList.add("bg-dark");
            toggleButton.textContent = "☀️";
        }

        toggleButton.addEventListener("click", function () {
            body.classList.toggle("dark-mode");

            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("darkMode", "enabled");
                sidebar.classList.remove("bg-white");
                sidebar.classList.add("bg-dark");
                toggleButton.textContent = "☀️";
            } else {
                localStorage.setItem("darkMode", "disabled");
                sidebar.classList.remove("bg-dark");
                sidebar.classList.add("bg-white");
                toggleButton.textContent = "🌙";
            }
        });
    });
</script>
<script>
        document.addEventListener("DOMContentLoaded", function () {
            const logoImage = document.getElementById("logoImage");
            const body = document.documentElement;

            // Funzione per cambiare il logo in base alla modalità
            function updateLogo() {
                if (body.classList.contains("dark-mode")) {
                    logoImage.src = "/images/zerodrop.png"; // Logo per dark mode
                } else {
                    logoImage.src = "/images/logo.png"; // Logo per light mode
                }
            }

            // Esegui subito per impostare il logo corretto all'avvio
            updateLogo();

            // Ogni volta che la modalità cambia, aggiorna il logo
            const toggleButton = document.getElementById("darkModeToggle");
            toggleButton.addEventListener("click", function () {
                updateLogo();
            });
        });
    </script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/dataTables.min.js"></script>

<body class="d-flex">
    <!--Main Navigation-->
    <!-- Sidebar -->
