@page
@model HonorSystem.Pages.Bosses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Boss</h1>

<div class="form-group">
    <a asp-page="Create" class="btn btn-primary">Crea Boss</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Boss[0].BossName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boss[0].IsField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boss[0].IsArch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boss[0].IsGuild)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Boss)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BossName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsField)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsArch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsGuild)
                </td>
                <td>
                    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.IdBoss">Modifica</a> 
                    <a asp-page="./Details" class="btn btn-secondary" asp-route-id="@item.IdBoss">Dettagli</a> 
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.IdBoss">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
