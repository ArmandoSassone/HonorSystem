@page
@model HonorSystem.Pages.HonorEntry.IndexModel

@{
    ViewData["Title"] = "Index";
}

<script>
    window.onload = function () {
        $('#itemTable').DataTable({
            "paging": true,  // Attiva la paginazione
            "searching": true,  // Abilita la ricerca
            "ordering": true,  // Abilita l'ordinamento
            "pageLength": 25,  // Imposta il numero di righe per pagina (puoi cambiare questo valore)
            "lengthMenu": [5, 10, 25, 50, 100],  // Opzioni per le righe per pagina (es. 5, 10, 25, 50, 100)
            "pagingType": "full_numbers",  // Tipo di paginazione (numeri completi)
            "language": {
                "lengthMenu": "",
                "info": "",
                "search": "Cerca:"
            }
        });
    };
</script>

<h1>HonorEntry</h1>

<div class="form-group">
    <a asp-page="Create" class="btn btn-primary">Crea HonorEntry</a>
    <a asp-page="BulkInsert" class="btn btn-primary">Bulk Insert</a>
</div>


<div class="table-responsive">
    <table id="honorEntryTable" class="display table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nome Giocatore
                </th>
                <th>
                    Punti Assegnati
                </th>
                <th>
                    Data Inserimento
                </th>
                <th>
                    Data Scadenza
                </th>
                <th>
                    Descrizione
                </th>
                <th>
                    Tipo HonorEntry
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Honorentry)
            {
                <tr>
                    <td>
                        @item.IdHonorEntry
                    </td>
                    <td>
                        @item.Player?.Name
                    </td>
                    <td>
                        @item.AssignedPoints
                    </td>
                    <td>
                        @item.EntryDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.ExpirationDate?.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.HonorEntryType?.Type
                    </td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.IdHonorEntry" data-bs-toggle="tooltip"
                            title="Modifica"><i class="bi bi-pencil-square"></i></a>
                        <a asp-page="./Details" class="btn btn-secondary" asp-route-id="@item.IdHonorEntry"
                            data-bs-toggle="tooltip" title="Dettagli"><i class="bi bi-eye"></i></a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.IdHonorEntry"
                            data-bs-toggle="tooltip" title="Elimina"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
